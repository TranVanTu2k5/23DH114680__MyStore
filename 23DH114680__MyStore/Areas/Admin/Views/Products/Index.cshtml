@model IEnumerable<_23DH114680__MyStore.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <style>
        img{
            height:150px;
            max-height:150px;
        }
    </style>
</head>

<h2 class="bg-success">DANH SÁCH SẢN PHẨM</h2>
<table class="table bg-info col-lg-12">
    <tr>
        <th class="bg-success col-lg-1">
            Tên sản phẩm
        </th>
        <th class="bg-success col-lg-1">
            Đơn giá
        </th>
        <th class="bg-success col-lg-5">
            Hình ảnh
        </th>
        <th class="bg-success col-lg-3">
            Mô tả
        </th>
        <th class="bg-success col-lg-2"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductPrice)
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.ProductImage)" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductDescription)
        </td>
 
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ProductID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ProductID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Xóa", "Delete", new { id=item.ProductID }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>