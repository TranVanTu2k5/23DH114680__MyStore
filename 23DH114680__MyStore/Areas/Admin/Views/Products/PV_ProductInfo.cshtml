@model _23DH114680__MyStore.Models.Product
<head>
    <style>
        img {
            height: 250px;
            max-height: 250px;
        }
    </style>
</head>

<div class="container-fluid">
    <div class="div-horizontal">
        <div class="col-md-4">
            <img src="@Html.DisplayFor(model => model.ProductImage)" />
        </div>
        <div class="col-md-8">
            <dl>
                <dt>Tên sản phẩm</dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt>đơn giá</dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductPrice)
                </dd>
                <dt>Danh mục</dt>
                <dd>
                    @Html.DisplayFor(model => model.CategoryID)
                </dd>
                <dt>mô tả</dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductDescription)
                </dd>
            </dl>
        </div>
    </div>
</div>